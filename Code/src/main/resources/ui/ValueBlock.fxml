<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>

<fx:root type="nl.utwente.group10.ui.components.blocks.output.ValueBlock" xmlns:fx="http://javafx.com/fxml/">
	<BorderPane>
		<center>
			<BorderPane fx:id="block" styleClass="value, block" minHeight="50" maxHeight="50" minWidth="75">
				<center>
					<Label text="${controller.value}" styleClass="content" />
				</center>
			</BorderPane>
		</center>
		<bottom>
			<BorderPane fx:id="outputSpace" maxHeight="0"/>
		</bottom>
	</BorderPane>
</fx:root>
